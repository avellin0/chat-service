{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules"
  ]
}
